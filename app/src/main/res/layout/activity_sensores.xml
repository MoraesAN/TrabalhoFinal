<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IMC.Sensores.SensoresActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="@string/titulo_Sensores" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="@string/texto_Sensores" />

    <TextView
        android:id="@+id/txtRespostaSensores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sensores"
        android:textColor="@color/white"
        android:text="TEST"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnSensores"
        android:layout_width="match_parent"
        android:onClick="lerSensor"
        android:layout_height="wrap_content"
        android:text="@string/btn_Sensores" />
</LinearLayout>